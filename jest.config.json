{
  "verbose": true,
  "collectCoverage": true,
  "cacheDirectory": ".cache",
  "roots": ["<rootDir>"],
  "transform": {
    "^.+\\.(t|j)s?x?$": "babel-jest"
  },
  "testEnvironment": "jsdom",
  "globals": {},
  "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/lib/", "<rootDir>/dist/", "<rootDir>/es/"],
  "moduleNameMapper": {
    "^@src/(.+)$": "<rootDir>/src/$1"
  },
  "moduleFileExtensions": ["ts", "js"],
  "testRegex": "(test|spec)\\.(ts|js)?$"
}
